name: Check File Size

on: 
  push:
    branches:
      - main
      - 'team/*'
  pull_request:
    branches:
      - main
      - 'team/*'

jobs:
  check_file_size:
    runs-on: ubuntu-latest
    steps:
    - name: Checkout repository
      uses: actions/checkout@v2

    - name: Check file sizes
      run: |
        find . -type f -size +3M | grep -v '\.git/' || true
    - name: Fail if any large files found
      if: success()
      run: |
        files=$(find . -type f -size +3M | grep -v '\.git/' || true)
        if [ -n "$files" ]; then
          echo "Error: The following files are larger than 3 MB:"
          echo "$files"
          exit 1
        fi
